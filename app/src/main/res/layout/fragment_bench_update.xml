<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="benchInfo"
            type="sheridan.wrimicha.final_project.benchpress.domain.BenchDataId" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idHolderBench"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Long.toString(benchInfo.id)}"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:text="Date:" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:id="@+id/tableRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/d2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{Integer.toString(benchInfo.day)}" />

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/" />

                    <TextView
                        android:id="@+id/m2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{Integer.toString(benchInfo.month)}" />

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/" />

                    <TextView
                        android:id="@+id/y2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{Integer.toString(benchInfo.year)}" />
                </TableRow>
            </TableLayout>

            <EditText
                android:id="@+id/weightUsed"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="@{benchInfo.weight}"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="@{benchInfo.sets}"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="@{benchInfo.reps}"
                android:textAlignment="center" />

            <Button
                android:id="@+id/dateChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Date" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/hid">
            <CalendarView
                android:id="@+id/calendarView2"
                android:layout_width="278dp"
                android:layout_height="308dp"
                android:layout_marginBottom="36dp"
                android:foregroundGravity="center"
                />
            </LinearLayout>
            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Home"
                app:icon="@drawable/ic_baseline_home_24"/>

            <Button
                android:id="@+id/updateBench"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="Update" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>